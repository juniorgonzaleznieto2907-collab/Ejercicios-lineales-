Algoritmo ejercicio22
	//definir variables 
	Definir paginas Como Entero
    Definir precio_pagina Como Real
    Definir costo_impresion Como Real
    //asignar valores 
    Escribir "Ingrese el número de páginas: "
    Leer paginas
    Escribir "Ingrese el precio por página: "
    Leer precio_pagina
    //procesar datos 
    costo_impresion <- paginas * precio_pagina
    //mostrar respuesta 
    Escribir "El costo de impresión es: ", costo_impresion
	
FinAlgoritmo
